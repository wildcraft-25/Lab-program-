#include <stdio.h>
#include <stdlib.h>

#define maxsize 5

char cq[maxsize];
int front, rear;

void insert(char item)
{
    if (front == (rear + 1) % maxsize)
        printf("\nCIRCULAR QUEUE FULL\n");
    else
    {
        if (front == -1)  // First element insertion
            front = rear = 0;
        else
            rear = (rear + 1) % maxsize;

        cq[rear] = item;
        printf("Inserted %c\n", item);
        printf("Rear = %d   Front = %d\n", rear, front);
    }
}

void delete()
{
    if (front == -1)
        printf("\nCIRCULAR QUEUE EMPTY\n");
    else
    {
        printf("\nDELETED ELEMENT: %c\n", cq[front]);
        cq[front] = '-';
        
        if (front == rear)   // Only one element
            front = rear = -1;
        else
            front = (front + 1) % maxsize;

        printf("Rear = %d   Front = %d\n", rear, front);
    }
}

void display()
{
    int i;

    if (front == -1)
        printf("\nQUEUE EMPTY\n");
    else
    {
        printf("\nQueue Elements:\n");
        for (i = 0; i < maxsize; i++)
            printf("%c\t", cq[i]);

        printf("\nRear = %d   Front = %d\n", rear, front);
    }
}

int main()
{
    int choice;
    char item;

    front = -1;
    rear = -1;

    while (1)
    {
        printf("\n\n------- QUEUE MENU -------\n");
        printf("1. INSERT INTO QUEUE\n");
        printf("2. DELETE FROM QUEUE\n");
        printf("3. DISPLAY QUEUE\n");
        printf("4. EXIT\n");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch (choice)
        {
            case 1:
                printf("Enter the queue element: ");
                scanf(" %c", &item);
                insert(item);
                break;

            case 2:
                delete();
                break;

            case 3:
                display();
                break;

            case 4:
                exit(0);

            default:
                printf("\nInvalid Choice!\n");
        }
    }

    return 0;
}

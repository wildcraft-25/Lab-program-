#include <stdio.h>

void towerOfHanoi(int n, char source, char dest, char temp);

int main()
{
    int n; // Number of disks
    printf("Enter number of disks\n");
    scanf("%d", &n);

    towerOfHanoi(n, 'S', 'D', 'T'); // Correct function call
    return 0;
}

// C recursive function to solve tower of hanoi puzzle
void towerOfHanoi(int n, char source, char dest, char temp)
{
    if (n == 1)
    {
        printf("\nMove disk 1 from %c to %c", source, dest);
        return;
    }

    towerOfHanoi(n - 1, source, temp, dest);
    printf("\nMove disk %d from %c to %c", n, source, dest);
    towerOfHanoi(n - 1, temp, dest, source);
}
